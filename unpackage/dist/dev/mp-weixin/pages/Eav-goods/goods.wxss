
page{
	background-color: #f2f2f2;
}
textarea{
	box-sizing: border-box;
	background-color: #FFFFFF;
	padding: 10rpx;
	width: 100%;
	height: 350rpx;
	line-height: 1.5;
	margin-bottom: 20rpx;
}
.goods-image{
	display: flex;
	flex-wrap: wrap;
}
.goods-image view{
	width: calc(33.3% - 5rpx*2);
	height: 200rpx;
	margin: 5rpx;
}
.goods-image image{
	width: 100%;
	height: 100%;
	display: block;
	border-radius: 7rpx;
}
.upload-Image {
	position: relative;
}
.upload-Image image:nth-child(2){
	width: 30rpx !important;
	height: 30rpx !important;
	position: absolute;
	top: 0;
	right: 0;
}
.back{
	background-color: #f2f2f2 !important;
}
